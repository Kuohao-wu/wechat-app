page {
  height: 100%;
  font-family: PingFangSC;
  font-size: 12px;
  font-weight: 100;
  font-weight: normal;
  font-stretch: normal;
  text-align: left;
  color: #4a4a4a;
  background: #fff;
}
.container {
  height: 100%;
}

.btn-cta {
  width: 130px;
  height: 40px;
  border-radius: 3px;
  font-size: 14px;
  line-height: 40px;
  color: #fff;
  text-align: center;
  background-color: #00c9a9;
}

.btn-cta.btn-grey {
  background: #c0c2ce;
}

.btn-sku {
  padding: 4.5px 17px; 
  border-radius: 1.5px;
  background-color: #ffffff;
  border: solid 1px #979797;
  margin-right: 7px;
  font-size: 13px;
  line-height: 18px;
}
.font-light {
  font-weight: 100;
}
.font-nomal {
  font-weight: normal;
}

.content3 {
  color: #4a4a4a;
}

.content2 {
  color: #9B9B9B;
}

.content1 {
  color: #333333;  
}

.block-bg{
  background-color: white;
  padding: 10px 10px;
  margin-top: 10px;
  box-shadow:  0px 2px 6px #E3E3E3; 
}
