/**address.wxss**/
/**optional**/
@import "../../common.wxss";
page {
  background: #F2F2F6;
}
.buy_flower_detail {
  display: flex;
  position: relative;
}
.buy_flower_detair_photo_wrap {
  width: 54px;
  height: 60px;
  box-shadow: -5px 1px 15px 1px #ccc;
}

.block_title {
  font-size: 14px;
  line-height: 32px;
}
.block_title_tip {
  font-size: 10px;
  line-height: 14px;
}

.flower_price {
  position: absolute;
  right: 11px;
  top: 33px;
  color: #00c9a9;
  font-size: 16px;
  line-height: 22px;
}

.buy_flower_detair_photo_wrap image {
  width: 100%;
  height: 100%;
}
.flower_detail {
  font-size: 12px;
  line-height: 18px;
}

.buy_flower_detail_tip {
  flex-grow: 1;margin-left: 13px;
}

.btn-pay {
  width: 100%;
  height: 22px;
  font-size: 16px;
  line-height: 22px;
  padding: 10px;
  color: #fff;
  text-align: center;
  background-color: #00c9a9;
}
.box {
  font-size: 12px;
  width: 20px;
  height: 20px;
  color: #fff;
  text-align: center;
  background-color: #00c9a9;
  margin-right:5px;
  line-height: 20px;
  display: inline-block;
}
.switch-style{
    right:0
}
.data-select {
  border-bottom: 1px solid #c0c2ce;
  flex-grow: 1;
}

.data-select picker {
  width: 100%;
  height: 100%;
  font-size: 12px;
  line-height: 19px;
  color: #c0c2ce;
  display: inline-block;
}

.data-select-item {
  width: 33.33%;
  padding-left: 10px;
  display: flex;
}

.address_input {
  margin-top: 15px;
  margin-left: 15px;
  font-size: 12px;
  line-height: 17px;
}

.address_input input {
  border-bottom: 1px solid #c0c2ce;
}

.address_text {
  margin-top: 15px;
  font-size: 12px;
  line-height: 17px;
}

.address_text checkbox {
  color: #4a4a4a;
}

.address_textarea {
  border: 1px solid #c0c2ce;
  width: 100%;
  height: 60px;
  margin-top: 10px;
}